<p id="notice"><%= notice %></p>

<h1>Band Members</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Instrument</th>
      <th>Artist</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @band_members.each do |band_member| %>
      <tr>
        <td><%= band_member.name %></td>
        <td><%= band_member.instrument %></td>
        <td><%= band_member.artist.name %></td>
        <td><%= link_to 'Show', band_member %></td>
        <td><%= link_to 'Edit', edit_band_member_path(band_member) %></td>
        <td><%= link_to 'Destroy', band_member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

